<Page x:Class="NauchKonf_ProskuninMV_05.Pages.OrgPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NauchKonf_ProskuninMV_05.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrgPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="Cyan">
            <TextBlock Text="Окно организатора" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        </Grid>


        <WrapPanel HorizontalAlignment="Center" Grid.Row="1">
            <Button x:Name="btnSozdNewOrder" Content="Создать новый заказ" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" Background="Coral" Margin="10 10 0 0" Click="btnSozdNewOrder_Click"/>
            <Button x:Name="btnAllOrders" Content="Просмотреть все заказы" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" Background="Coral" Margin="10 10 0 0" Click="btnAllOrders_Click"/>
        </WrapPanel>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
