<Page x:Class="NauchKonf_ProskuninMV_05.Pages.AllOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NauchKonf_ProskuninMV_05.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllOrdersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название конференции"/>
                <DataGridTextColumn Header="Количество гостей"/>
                <DataGridTextColumn Header="Необходимое оборудование"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Grid.Row="1" x:Name="btnBack" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" Background="Cyan" FontSize="20" Click="btnBack_Click"/>
    </Grid>
</Page>
