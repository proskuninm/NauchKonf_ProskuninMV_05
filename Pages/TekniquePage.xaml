<Page x:Class="NauchKonf_ProskuninMV_05.Pages.TekniquePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NauchKonf_ProskuninMV_05.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TekniquePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Background="Coral">
            <TextBlock Text="Окно техника" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заказ"/>
                <DataGridTextColumn Header="Статус"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Изменить статус" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Cyan" FontSize="20"/>
        <Button Content="Сохранить" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Cyan" FontSize="20" Margin="10"/>

    </Grid>
</Page>
